<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".GameActivity"
		android:background="#425E68"
		android:id="@+id/gameLayout"
		android:onClick="helpButtonClicked"
		>

	<Button
			android:text="@string/run"
			android:layout_width="167dp"
			android:layout_height="84dp"
			android:id="@+id/runButton"
			android:onClick="runButtonClicked"
			android:backgroundTint="@color/runColor"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:fontFamily="sans-serif-condensed"
			android:textSize="40sp"
			android:insetBottom="0dp"
			android:insetTop="0dp"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="70dp"/>

	<fragment
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:name="com.wordpress.brancodes.GameBoardFragment"
			android:id="@+id/fragment_game_board"
			app:layout_constraintDimensionRatio="1.0"
			app:layout_constraintBottom_toTopOf="@+id/runButton"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/helpButton"/>

	<Button
			android:text="@string/questionMark"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:id="@+id/helpButton"
			android:background="@drawable/circle_button"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:insetRight="6dp"
			android:insetLeft="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
